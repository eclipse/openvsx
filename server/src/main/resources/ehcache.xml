<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd">
    <persistence directory="${java.io.tmpdir}"/>
    <cache alias="average.review.rating">
        <expiry>
            <none/>
        </expiry>
        <resources>
            <heap unit="entries">1</heap>
            <offheap unit="MB">1</offheap>
            <disk unit="MB">2</disk>
        </resources>
    </cache>
    <cache alias="namespace.details.json">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1024</heap>
            <offheap unit="MB">32</offheap>
            <disk unit="MB">128</disk>
        </resources>
    </cache>
    <cache alias="database.search">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1024</heap>
        </resources>
    </cache>
    <cache alias="extension.json">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1024</heap>
            <offheap unit="MB">32</offheap>
            <disk unit="MB">128</disk>
        </resources>
    </cache>
    <cache alias="latest.extension.version">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1024</heap>
            <offheap unit="MB">32</offheap>
            <disk unit="MB">128</disk>
        </resources>
    </cache>
    <cache alias="buckets">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1024</heap>
            <offheap unit="MB">32</offheap>
            <disk unit="MB">128</disk>
        </resources>
    </cache>
</config>