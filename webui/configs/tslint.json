{
  "defaultSeverity": "warning",
  "rules": {
    "ban-comma-operator": {
      "severity": "error"
    },
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": false,
    "eofline": false,
    "file-header": {
      "options": [
        "[\n\r]+ \\* Copyright \\([cC]\\) \\d{4}(-\\d{4})? .*[\n\r]+"
      ],
      "severity": "error"
    },
    "forin": true,
    "import-blacklist": {
      "options": [
        "..",
        "../index",
        "../..",
        "../../index"
      ],
      "severity": "error"
    },
    "indent": [
      true,
      "spaces"
    ],
    "max-line-length": [
      true,
      180
    ],
    "no-any": false,
    "no-arg": {
      "severity": "error"
    },
    "no-console": false,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": {
      "severity": "error"
    },
    "no-duplicate-variable": {
      "severity": "error"
    },
    "no-eval": {
      "severity": "error"
    },
    "no-invalid-this": true,
    "no-misused-new": {
      "severity": "error"
    },
    "no-null-keyword": false,
    "no-return-await": false,
    "no-shadowed-variable": true,
    "no-string-throw": {
      "severity": "error"
    },
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": {
      "severity": "error"
    },
    "no-unused-expression": false,
    "no-var-keyword": {
      "severity": "error"
    },
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "prefer-const": [
      true,
      {
        "destructuring": "all"
      }
    ],
    "prefer-object-spread": true,
    "radix": true,
    "semicolon": {
      "options": [
        "always",
        "ignore-interfaces"
      ],
      "severity": "error"
    },
    "trailing-comma": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "use-isnan": true,
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}
