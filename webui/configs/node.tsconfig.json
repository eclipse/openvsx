{
  "compilerOptions": {
    "target": "ESNext",

    "lib": [
      "ESNext"
    ],

    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noEmit": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },

  "include": [
    "../vite.config.ts",
    "../configs/**.ts"
  ]
}
